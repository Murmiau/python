n = int(input("Напишите, пожалуйста, число: "))
n1 = str(n)
n2 = n1 + n1
n3 = n1 + n1 + n1
res = n + int(n2) + int(n3)
print("Получен следующий результат:", res)

//
while n < '0':
    print("Введите, пожалуйста, целое положительное число")
    n = input("Напишите, пожалуйста, число: ")

print(f"{n} + {n+n} + {n + n + n} = {int(n) + int(n + n) + int (n + n+ n)}")